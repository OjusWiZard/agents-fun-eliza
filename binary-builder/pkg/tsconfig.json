{
  "compilerOptions": {
    // Enable latest features
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "esModuleInterop": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // Some stricter flags
    "noUnusedLocals": true,
    // "removeComments": true,

    "baseUrl": "./"
  },
  "include": ["*"], // Ensures only necessary files are compiled
  "exclude": [""] // Excludes unnecessary folders
}
